<%- include('header'); -%>

    <div class="box" id="heading">
        <h1>
            <%=listTitle%>'s <br>To-do-List
        </h1>
    </div>
    <div class="box">
        <% for( let index=0; index < newListItems.length; index++ ) { %>
            <form action="/delete_items/<%= listTitle %>"  method="post">
                <div class="item">
                    <input type="checkbox" name="delete_list_item" onChange="this.form.submit()" value="<%= newListItems[index].name %>" >
                    <p>
                        <%= newListItems[index].name %>
                    </p>
                </div>
                <!-- <input type="hidden" name="list_name" value="<%= listTitle %> "> -->
            </form>
            <% } %>
                <form class="item" action="/" method="post">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                    <button type="submit" name="list" value="<%= listTitle %>">+</button>
                </form>
    </div>
    


                <%- include('footer'); -%>